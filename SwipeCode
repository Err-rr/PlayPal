<body>

<div class="card-container" id="cardContainer">
  <!-- Cards will be injected here by JS -->
</div>

<script>
  const profiles = [
    { name: "Xerneas_99", age: 20,image: "https://images.unsplash.com/photo-1529626455594-4ff0802cfb7e?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3" },
    { name: "Bob", age: 28, image: "https://placekitten.com/301/240" },
    { name: "Charlie", age: 23, image: "https://placekitten.com/302/240" },
    { name: "Diana", age: 26, image: "https://images.unsplash.com/photo-1506794778202-cad84cf45f1d?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3" },
    { name: "Ethan", age: 27, image: "https://placekitten.com/303/240" },
    { name: "Fiona", age: 24, image: "https://images.unsplash.com/photo-1500648767791-00dcc994a43e?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3" },
    { name: "George", age: 30, image: "https://placekitten.com/304/240" },
    { name: "Error-04", age: 22, image: "https://t4.ftcdn.net/jpg/06/58/53/77/360_F_658537783_0p9kTPPcYxcDwZVw2ghqgW2RlPNKZRQD.jpg" }
  ];

  const container = document.getElementById("cardContainer");

  function createCard(profile) {
    const card = document.createElement("div");
    card.className = "card";

    card.innerHTML = `
      <img src="${profile.image}" alt="${profile.name}" />
      <h2>${profile.name}, ${profile.age}</h2>
      <p>Swipe me!</p>
      <div class="buttons">
        <button class="dislike">✖</button>
        <button class="like">❤</button>
      </div>
    `;

    const likeBtn = card.querySelector(".like");
    const dislikeBtn = card.querySelector(".dislike");

    likeBtn.addEventListener("click", () => {
      card.style.transform = "translateX(100%) rotate(15deg)";
      card.style.opacity = "0";
      setTimeout(() => card.remove(), 300);
    });

    dislikeBtn.addEventListener("click", () => {
      card.style.transform = "translateX(-100%) rotate(-15deg)";
      card.style.opacity = "0";
      setTimeout(() => card.remove(), 300);
    });

    return card;
  }

  profiles.reverse().forEach(profile => {
    const card = createCard(profile);
    container.appendChild(card);
  });
</script>

</body>
